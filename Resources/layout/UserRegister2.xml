
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5fb0c9">

     <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:background="@android:drawable/divider_horizontal_textfield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout20">
        <TextView
            android:text="Insert data for your child"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textSize="30sp"
            android:id="@+id/text1SignUp" />
        
        </LinearLayout>

    <TextView
      android:text="Student first name"
      android:layout_marginLeft="10dp"
      android:textSize="20sp"
      android:textStyle="bold"
      android:layout_marginTop="30dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtName" />
    <EditText
        android:inputType="textEmailAddress"
        android:hint="Insert child's first name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/studentRegisterName" />

     <TextView
      android:text="Student last name"
      android:layout_marginLeft="10dp"
      android:textSize="20sp"
      android:textStyle="bold"
      android:layout_marginTop="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtSourname" />
    <EditText
        android:inputType="textEmailAddress"
        android:hint="Insert child's last name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/studentRegisterSourame" />

    <TextView
      android:text="Email"
      android:layout_marginLeft="10dp"
      android:textSize="20sp"
      android:textStyle="bold"
      android:layout_marginTop="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtEmail" />
    <EditText
        android:inputType="textEmailAddress"
        android:hint="Email adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/studentRegisterEmail" />

    <TextView
      android:text="Password"
      android:layout_marginLeft="10dp"
      android:textSize="20sp"
      android:textStyle="bold"
      android:layout_marginTop="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtpassword1" />
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/studentRegisterPassword1" />
    

    <TextView
      android:text="Repeat password"
      android:layout_marginLeft="10dp"
      android:textSize="20sp"
      android:textStyle="bold"
      android:layout_marginTop="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtPasswordRepeat" />
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/studentRegisterPassword2" />

    <LinearLayout
        
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout10">
        <Button
            android:text="Add child"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:background="@android:drawable/btn_default_small"
            android:drawableLeft="@android:drawable/ic_menu_add"
            android:layout_height="wrap_content"
            android:textColor="#ff535353"
            android:id="@+id/buttonStudentRegister" />

        <Button
            android:layout_marginTop="10dp"
            android:text="Back to main menu"
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:background="@android:drawable/btn_default_small"
            android:drawableLeft="@android:drawable/ic_menu_revert"
            android:layout_height="wrap_content"
            android:textColor="#ff535353"
            android:id="@+id/buttonBackUserRegister2" />

    </LinearLayout>

</LinearLayout>