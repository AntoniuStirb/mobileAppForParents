
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5fb0c9">



    <TextView
        android:text="Welcome to parent main menu!"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableLeft="@android:drawable/ic_input_get"
        android:gravity="center_horizontal"
        android:textColor="#ff535353"
        android:textStyle="bold"
        android:minWidth="25px"
        android:minHeight="25px"
        android:textSize="25sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/abc_edit_text_material"
        android:id="@+id/textView1" />

    <RelativeLayout
        android:background="#00ced1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/second_text"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="50dp"
        android:elevation="3dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:translationZ="20dp"
        android:layout_centerHorizontal="true" >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:background="#00ced1">

                    <Button
                        android:text="Click here to add your child"
                        android:layout_marginTop="20dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffffff"
                        android:background="#696969"
                        android:drawableLeft="@android:drawable/ic_menu_add"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:translationZ="20dp"
                        android:id="@+id/buttonParentAddChild" />
            <Button
                        android:text="Assign new test"
                        android:layout_marginTop="20dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffffff"
                        android:background="#696969"
                        android:drawableStart="@android:drawable/ic_menu_upload_you_tube"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:translationZ="20dp"
                        android:id="@+id/buttonParentAssignTest" />
                   <Button
                        android:text="Click here to see child's previous results"
                        android:layout_marginTop="20dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffffff"
                        android:background="#696969"
                        android:drawableLeft="@android:drawable/ic_menu_recent_history"
                        android:textAllCaps="false"
                        android:textSize="18sp"
                        android:translationZ="20dp"
                        android:id="@+id/buttonParentPreviousResults" />

                  
    
                 <Button
                        android:text="Back to app main menu"
                        android:layout_marginTop="60dp"
                        android:layout_marginBottom="40dp"
                        android:layout_width="fill_parent"
                        android:textColor="#ffffffff"
                        android:layout_height="wrap_content"
                        android:background="#696969"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:translationZ="20dp"
                        android:drawableLeft="@android:drawable/ic_menu_revert"
                        android:id="@+id/buttonBackParentMenu" />



            </LinearLayout>

    </RelativeLayout>




</LinearLayout>