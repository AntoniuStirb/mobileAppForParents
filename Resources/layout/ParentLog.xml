<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5fb0c9"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true">

    <TextView
        android:id="@+id/login_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:text="Parent Log"
        android:textColor="#ff535353"
        android:textSize="40sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_title"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:translationZ="18dp"
        android:background="#00ced1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="30dp">


                <EditText
                    android:drawableLeft="@android:drawable/sym_action_email"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="25sp"
                    android:hint="Insert your email"    
                    android:id="@+id/parentEmail" />
          

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:drawableLeft="@android:drawable/ic_lock_idle_lock"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:singleLine="true"
                    android:textSize="25sp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:id="@+id/parentPassword" />
            </android.support.design.widget.TextInputLayout>

            


            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:background="#696969"
                android:text="Log in"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" 
                android:id="@+id/loginParentBtn"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:background="#696969"
                android:text="New user? Register now!"
                android:textAllCaps="false"
                android:drawableLeft="@android:drawable/ic_menu_add"
                android:textColor="#fff"
                android:textSize="18sp" 
                android:id="@+id/registerUserBtn"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="22dp"
                android:background="#696969"
                android:text="Return to main menu"
                android:drawableLeft="@android:drawable/ic_menu_revert"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp"
                android:id="@+id/parentBackBtn"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>