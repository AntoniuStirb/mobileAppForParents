
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5fb0c9">

     <LinearLayout
        android:orientation="vertical"
        android:background="@android:drawable/divider_horizontal_textfield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout20">
        <TextView
            android:text="Sign Up as a new parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textSize="30sp"
            android:id="@+id/text1SignUp" />
        
        <TextView
            android:text="Create a new account and start"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:id="@+id/text2SignUp" />
        </LinearLayout>>
    <TextView
      android:text="Name"
      android:layout_marginLeft="10dp"
      android:textSize="20sp"
      android:textStyle="bold"
      android:layout_marginTop="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtName" />
    <EditText
        android:inputType="textEmailAddress"
        android:hint="Enter your name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/parentRegisterName" />

     <TextView
      android:text="Sourname"
      android:layout_marginLeft="10dp"
      android:textSize="20sp"
      android:textStyle="bold"
      android:layout_marginTop="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtSourname" />
    <EditText
        android:inputType="textEmailAddress"
        android:hint="Enter your sourname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/parentRegisterSourame" />

    <TextView
      android:text="Email"
      android:layout_marginLeft="10dp"
      android:textSize="20sp"
      android:textStyle="bold"
      android:layout_marginTop="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtEmail" />
    <EditText
        android:inputType="textEmailAddress"
        android:hint="Write your email adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/parentRegisterEmail" />

    <TextView
      android:text="Password"
      android:layout_marginLeft="10dp"
      android:textSize="20sp"
      android:textStyle="bold"
      android:layout_marginTop="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtpassword1" />
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/parentRegisterPassword1" />
    

    <TextView
      android:text="Repeat your password"
      android:layout_marginLeft="10dp"
      android:textSize="20sp"
      android:textStyle="bold"
      android:layout_marginTop="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/txtPasswordRepeat" />
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/parentRegisterPassword2" />

    <LinearLayout
        
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout10">
        <Button
            android:text="Register"
            android:layout_width="match_parent"
            android:background="@android:drawable/btn_default_small"
            android:layout_height="wrap_content"
            android:textColor="#ff535353"
            android:id="@+id/buttonNextRegister" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1">
        <TextView
            android:text="Already have an account?"
            android:textSize="17sp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="match_parent"
            android:id="@+id/textView1" />
        <Button
            android:text="Sign in"
            android:background="@android:drawable/btn_default_small"
            android:id="@+id/adminSignInBtnInRegister"
            android:layout_marginLeft="20dp"
            android:textColor="#ff535353"
            android:layout_width="100dp"
            android:textSize="10sp"
            android:layout_height="35dp"/>

    </LinearLayout>
</LinearLayout>